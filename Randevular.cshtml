@model IEnumerable<proje.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-5">
    <!-- Başlık -->
    <div class="text-center mb-5">
        <h2 class="display-4 text-warning font-weight-bold">Randevu Listesi</h2>
        <p class="lead text-info">Randevularınızın onay durumunu buradan takip edebilirsiniz</p>
    </div>

    <!-- Tablo -->
    <div class="table-responsive shadow-lg rounded-lg overflow-hidden">
        <table class="table table-bordered table-hover table-striped align-middle text-center">
            <thead class="bg-gradient text-white">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Çalışan</th>
                    <th>İşlem</th>
                    <th>Tarih ve Saat</th>
                    <th>Onay Durumu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.MusteriAd</td>
                        <td>@randevu.MusteriSoyad</td>
                        <td>@randevu.Calisan?.Ad </td>
                        <td>@randevu.Islem?.Ad </td>
                        <td>@randevu.TarihSaat.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <span class="badge @(randevu.Onaylandi ? "bg-success" : "bg-danger")">
                                @(randevu.Onaylandi ? "Evet" : "Hayır")
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Ek Stiller -->
<style>
    body {
        background: #f0f8ff; /* Daha açık ve ferah bir arka plan */
        font-family: 'Arial', sans-serif;
    }

    h2 {
        font-weight: 700;
        color: #ff6600; /* Canlı turuncu yazı rengi */
    }

    .text-info {
        color: #17a2b8; /* Mavi-yeşil tonunda açıklamalar */
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            font-size: 1.1rem;
        }

        .table tbody tr:hover {
            background-color: #ffebcd; /* Daha açık sarı arka plan rengi */
            cursor: pointer;
        }

    .badge {
        font-size: 1rem;
        padding: 0.5rem 1.2rem;
        border-radius: 25px;
    }

    .bg-gradient {
        background: linear-gradient(to right, #ff6600, #ff9e00); /* Turuncu tonlarında gradient */
    }

    .bg-success {
        background-color: #28a745 !important; /* Onaylanan durum için yeşil */
    }

    .bg-danger {
        background-color: #dc3545 !important; /* Onaylanmayan durum için kırmızı */
    }

    .table th, .table td {
        padding: 1.2rem;
    }

    .table-bordered {
        border: 2px solid #ff6600; /* Turuncu çerçeve */
    }

    .table-hover tbody tr:hover {
        background-color: #fff4e6; /* Hover esnasında açık turuncu renginde yumuşak geçiş */
    }
</style>
