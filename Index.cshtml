@model IEnumerable<proje.Models.Salon>

@{
    ViewData["Title"] = "Salon Listesi";
}

<div class="container mt-5">
    <!-- Başlık ve Yeni Salon Ekle Butonu -->
    <div class="text-center mb-4">
        <h2 class="display-4 text-primary font-weight-bold">Salon Listesi</h2>
        <p class="lead text-muted">Salonların detaylı bir listesi. Yeni salon ekleyebilir veya mevcut salonları düzenleyebilirsiniz.</p>
        <a class="btn btn-lg btn-success" asp-action="Create" style="border-radius: 30px;">
            <i class="fas fa-plus-circle"></i> Yeni Salon Ekle
        </a>
    </div>

    <!-- Salonları Listeleme Tablosu -->
    <div class="table-responsive shadow-lg rounded-lg">
        <table class="table table-bordered table-striped table-hover text-center align-middle">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Salon Adı</th>
                    <th>Çalışma Saatleri</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var salon in Model)
                {
                    <tr>
                        <td>@salon.Id</td>
                        <td>@salon.Ad</td>
                        <td>@salon.CalismaSaatleri</td>
                        <td>
                            <!-- Düzenle Butonu -->
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@salon.Id" style="border-radius: 20px;">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>

                            <!-- Sil Butonu -->
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@salon.Id" onclick="return confirm('Bu salonu silmek istediğinizden emin misiniz?');" style="border-radius: 20px;">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-center mt-4">
    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-dark btn-lg px-4 py-2">Admin Paneline Dön</a>
</div>

<!-- Ek Stiller -->
<style>
    body {
        background: #f3f4f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    h2 {
        font-weight: 700;
        color: #007bff;
        font-size: 2.5rem;
    }

    p {
        font-size: 1.2rem;
        color: #6c757d;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 1.2rem;
            font-size: 1rem;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .table-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-lg {
        font-size: 1.1rem;
        padding: 0.8rem 2rem;
        border-radius: 30px;
    }

    .btn-sm {
        font-size: 0.9rem;
        padding: 0.4rem 1rem;
        border-radius: 20px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            color: white;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
            color: white;
        }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
            color: white;
        }

    .table-responsive {
        margin-top: 30px;
    }
</style>
