@model IEnumerable<proje.Models.Calisan>

@{
    ViewData["Title"] = "Çalışan Listesi";
}

<h2>Çalışan Listesi</h2>

<!-- Yeni Çalışan Ekle Butonu -->
<p>
    <a class="btn btn-success" asp-action="Create">Yeni Çalışan Ekle</a>
</p>

<!-- Çalışanları Listeleme Tablosu -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Uzmanlık Alanları</th>
            <th>Çalışma Saati</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>@string.Join(", ", item.Uzmanliklar)</td>
                <td>@item.UygunlukSaatleri</td>
                <td>
                    <!-- Düzenle Butonu -->
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>

                    <!-- Sil Butonu -->
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

