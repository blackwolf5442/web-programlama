@{
    ViewData["Title"] = "Admin Girişi";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 10px;">
        <h2 class="text-center text-primary">Admin Girişi</h2>

        <!-- Hata Mesajı -->
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center mt-3">@ViewBag.Error</div>
        }

        <!-- Giriş Formu -->
        <form method="post" action="@Url.Action("Login", "Home")">
            <div class="form-group mt-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <input type="email" name="username" class="form-control" id="username" placeholder="Kullanıcı adınızı girin" required />
            </div>
            <div class="form-group mt-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Şifrenizi girin" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-4 w-100">Giriş Yap</button>
        </form>
    </div>
</div>

<!-- Ek Stiller -->
<style>
    body {
        background: linear-gradient(to bottom, #f0f8ff, #e6e6fa);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border: none;
    }

    .btn-primary {
        border-radius: 5px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
        }
</style>
