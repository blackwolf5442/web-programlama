@model IEnumerable<proje.Models.Calisan>

@{
    ViewData["Title"] = "Çalışanlar Listesi";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-4 text-dark font-weight-bold">Çalışanlar Listesi</h2>
        <p class="lead text-muted">Tüm çalışanların detaylı listesi.</p>
    </div>

    <div class="table-responsive shadow-lg rounded-lg overflow-hidden">
        <table class="table table-bordered table-hover table-striped align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Uzmanlık Alanı</th>
                    <th>Uygunluk Saatleri</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calisan in Model)
                {
                    <tr>
                        <td>@calisan.Id</td>
                        <td>@calisan.Ad</td>
                        <td>@string.Join(",", calisan.Uzmanliklar)</td><!-- Listeyi düzgün şekilde yazdırma -->
                        <td>@calisan.UygunlukSaatleri</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-dark btn-lg px-4 py-2">Admin Paneline Dön</a>
    </div>
</div>

<!-- Ek Stiller -->
<style>
    body {
        background: #f0f8ff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    h2 {
        font-weight: 700;
        color: #333;
    }

    p {
        font-size: 1.1rem;
        color: #6c757d;
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 1.2rem;
            font-size: 1rem;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #007bff;
        color: white;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-outline-dark {
        color: #343a40;
        border-color: #343a40;
    }

        .btn-outline-dark:hover {
            background-color: #343a40;
            color: white;
        }

    .table-responsive {
        margin-top: 30px;
    }

    .d-flex {
        display: flex;
        justify-content: center;
    }

    .btn-lg {
        font-size: 1.2rem;
        padding: 0.6rem 1.6rem;
        border-radius: 30px;
    }
</style>
